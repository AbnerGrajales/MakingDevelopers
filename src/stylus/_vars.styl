/* General Colors */
$bg          = #FEFEF4
$darkGray    = #313233
$gray        = #666
$lightGray   = #E8E8E8
$white       = #FFF
$almostWhite = #F5F5F5
$black       = #000
$almostBlack = #111
$yellow      = #F6D42A
$red         = #FC1C49
$blue        = #00A2D9
$green       = #1D9A90

/* Font weights */
$fontWeightLighter = 100
$fontWeightLight   = 300
$fontWeightNormal  = 400
$fontWeightRegular = 500
$fontWeightBold    = 700
$fontWeightHeavy   = 900

/* Buttons */
$defaultStartColor  = #F9F9F9
$defaultEndColor    = #E9E9E9
$defaultBorderColor = #DCDCDC
$defaultShadowColor = #FFFFFF

$sucessStartColor   = #74AD5A
$successEndColor    = #68A54B
$successBorderColor = #3B6E22
$sucessShadowColor  = #9ACC85

$primaryStartColor  = #007DC1
$primaryEndColor    = #0061A7
$primaryBorderColor = #124D77
$primaryShadowColor = #54A3F7

$dangerStartColor  = #F24537
$dangerEndColor    = #C62D1F
$dangerBorderColor = #D02718
$dangerShadowColor = #F5978E

$warningStartColor  = #FFEC64
$warningEndColor    = #FFAB23
$warningBorderColor = #FFAA22
$warningShadowColor = #FFF6AF

$darkStartColor  = #45484D
$darkEndColor    = #000000
$darkBorderColor = #222222
$darkShadowColor = #666666

/* Media Queries */
$s    = 'only screen and'
$l    = 'orientation: landscape'
$maxW = 'max-width:'
$minW = 'min-width:'
$maxWDevice = 'max-device-width:'
$minWDevice = 'min-width-width:'

/* General breakpoints */
$desktopBreakpoint = 1024px;
$tabletBreakpoint = 768px;
$mobileBreakpoint = 640px;

/* Devices breakpoints */
$iPadW =  768px
$iPadH = 1024px
$iP4W  =  320px
$iP4H  =  480px
$iP5W  =  320px
$iP5H  =  568px
$iP6W  =  375px
$iP6H  =  667px
$iP6PW =  414px
$iP6PH =  736px

/* General Devices */
Desktop = $s + ' (' + $minW + $desktopBreakpoint + ')'
Tablet  = $s + ' (' + $maxW + $tabletBreakpoint + ')'
Mobile  = $s + ' (' + $maxW + $mobileBreakpoint + ')'

/* Specific Devices */
iPad              = $s + ' (' + $minWDevice + $iPadW + ') and (' + $maxWDevice + $iPadH + ')'
iPadLandscape     = $s + ' (' + $minWDevice + $iPadW + ') and (' + $maxWDevice + $iPadH + ') and (' + $l + ')'
iPhone6P          = $s + ' (' + $minWDevice + $iP4W  + ') and (' + $maxWDevice + $iP4H  + ')'
iPhone6PLandscape = $s + ' (' + $minWDevice + $iP6PW + ') and (' + $maxWDevice + $iP6PH + ') and (' + $l + ')'
iPhone6           = $s + ' (' + $minWDevice + $iP6W  + ') and (' + $maxWDevice + $iP6H  + ')'
iPhone6Landscape  = $s + ' (' + $minWDevice + $iP6W  + ') and (' + $maxWDevice + $iP6H  + ') and (' + $l + ')'
iPhone5           = $s + ' (' + $minWDevice + $iP5W  + ') and (' + $maxWDevice + $iP5H  + ')'
iPhone5Landscape  = $s + ' (' + $minWDevice + $iP5W  + ') and (' + $maxWDevice + $iP5H  + ') and (' + $l + ')'
iPhone4           = $s + ' (' + $minWDevice + $iP4W  + ') and (' + $maxWDevice + $iP4H  + ')'
iPhone4Landscape  = $s + ' (' + $minWDevice + $iP4W  + ') and (' + $maxWDevice + $iP4H  + ') and (' + $l + ')'
