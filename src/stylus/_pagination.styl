.pagination
    resetList()
    color $darkGrayPagination
    margin-top 20px
    text-align center
    width 95%

    li
        display inline-block
        padding 4px 6px 4px 0
        text-align center

        a
            border-radius 5px
            color $black
            float left
            padding 8px 16px
            text-decoration none

            &:hover
                color $black !important
                background-color $lightGray

            &.active
                background-color $blue
                border-radius 5px
                color $white

                &:hover
                    color $white !important
