.Sidebar
    float left
    width 200px

    @media Tablet
        display none

    ul
        resetList()
        position relative
        z-index 100

        li
            fontSize(14px)
            height 40px
            line-height 40px
            position relative
            text-indent 40px

            a
                &.module
                    color $lightGray
                    display block
                    text-decoration none
                    text-indent 50px
                    width 100%
                &.create
                    position(absolute, 0px, 10px)
                    color $lightGray

            &:hover
                background-color #181818

    .credits
        fontSize(12px)
        color $white
        text-align center
